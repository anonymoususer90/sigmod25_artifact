{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
				"/usr/include/"
            ],
            "defines": [
				"USE_ASSERT_CHECKING",
                "SLEEP_ON_ASSERT",
                "ABORT_AT_FAIL",
                "SET_CPU_AFFINITY",
                "IO_AMOUNT",
                // "USING_LOCK",
				"DIVA",
				"HAP",
				"HAP_REDUCTION",
				"LOCATOR",
				// "LOCATOR_DEBUG"
				"_GNU_SOURCE"
			],
            "compilerPath": "/usr/local/bin/clang",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-clang-x64"
        }
    ],
    "version": 4
}